{
  "editor.formatOnSave": true,
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],
  // ref: https://en.wikipedia.org/wiki/Newline#History
  "files.eol": "\n",
  // Render vertical rulers after a certain number of monospace characters.
  // Use multiple values for multiple rulers.
  // No rulers are drawn if array is empty.
  "editor.rulers": [100],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#9a5151"
  },
  "editor.renderWhitespace": "selection",
  // ref: vscode tips
  // https://www.youtube.com/watch?v=EA_KnOZI-ck
  "editor.suggest.preview": true,
  "cSpell.words": [
    "axios",
    "commitlint",
    "ddhmit",
    "pinia",
    "preinstall",
    "prepeploy",
    "unplugin",
    "VITE",
    "vitejs"
  ],
  // close vetur ts.js validation
  // use default prettier-vscode
  "vetur.validation.template": false,
  "vetur.validation.script": false
}
