{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.stylelint": true
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],
  "stylelint.enable": true,
  "stylelint.packageManager": "pnpm",
  "stylelint.validate": ["css", "scss", "postcss"],

  // ref: https://en.wikipedia.org/wiki/Newline#History
  "files.eol": "\n",

  // Render vertical rulers after a certain number of monospace characters.
  // Use multiple values for multiple rulers.
  // No rulers are drawn if array is empty.
  "editor.rulers": [100],
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#9a5151"
  },

  "editor.renderWhitespace": "selection",

  // ref: vscode tips
  // https://www.youtube.com/watch?v=EA_KnOZI-ck
  "editor.suggest.preview": true,
  // Controls if quick suggestions should show up while typing
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },

  "cSpell.words": [
    "axios",
    "commitlint",
    "ddhmit",
    "mockjs",
    "pinia",
    "pnpm",
    "preinstall",
    "stylelint",
    "stylesheet",
    "taobao",
    "unocss",
    "unplugin",
    "VITE",
    "vitejs",
    "vueuse"
  ],

  // 这个属性可以控制你的编辑器将特定语言识别为特定的格式
  // 将 .json 文件识别为 jsonc 格式（方便增加备注）
  "files.associations": {
    "*.json": "jsonc",
  }
}
